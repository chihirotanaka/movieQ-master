<h2>ログイン</h2>
<p>メールアドレスとパスワードで</p>
<p>ログインしてください。</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, placefolder:"メールアドレス"%>
  </div>

  <div class="field">
    <%= f.label "パスワード" %><br />
    <%= f.password_field :password, autofocus: true, placefolder:"パスワード"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label "パスワードを記憶する" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログインする" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>