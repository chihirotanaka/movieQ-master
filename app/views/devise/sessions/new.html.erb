<div class="login-box">
    <h4>ログイン</h4>
    <p><small>メールアドレスとパスワードでログインしてください。</small></p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group row">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, placefolder:"メールアドレス",class: "form-control"%>
      </div>

      <div class="form-group row">
        <%= f.label "パスワード" %><br />
        <%= f.password_field :password, autofocus: true, placefolder:"パスワード",class: "form-control"%>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label "パスワードを記憶する" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログインする" ,class: "btn btn-primary pull-right"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>