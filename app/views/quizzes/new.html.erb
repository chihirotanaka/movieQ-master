<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">クイズをつくる</div>
    <div class="panel-body">

　　   <%= form_for(@newquiz, url: quizzes_path, method: :post) do |f| %>
        <div class="form-group">
   	        <%= f.label "お題をえらぶ" , class: "control-label"%><br />
            <%= f.collection_select :theme_id , @themes , :id, :theme ,class: "form-control"%><br />
        </div>
        <div class="form-group">
            <%= f.label "好きなタイトルを選んでください" %><br />
            <%= f.collection_select :movie_id, @movies, :id, :title ,class: "form-control"%><br />
        </div>
        <div class="form-group">
   	        <%= f.label "絵文字をえらぶ" , class: "control-label"%><br />
   	        1<%= f.text_field :emoji %><br />
            2<%= f.text_field :emoji %><br />
            3<%= f.text_field :emoji %><br />
        </div>
        <div class="form-group">
   	        <%= f.label "問題文をつくる", class: "control-label" %><br />
   	        <%= f.text_field :question %><br />
        </div>
        <div class="form-group">
   	        <%= f.label "選択肢をつくる", class: "control-label"%><br />
          <p style="font-size:8px">※一番上を答えにしてください！</p><br />
  	        1<%= f.text_field :answer %><br />
   	        2<%= f.text_field :answer2 %><br />
            3<%= f.text_field :answer3 %><br />
        </div>

          <%= submit_tag '作成する',class: "btn btn-default" %>
      <% end %>
</div>



