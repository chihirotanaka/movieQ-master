<div id="playbox">
	<div class="title-box">
		<p><strong>第<%= session[:quiz_num]+1 %>問</strong></p>
	</div>

	<div class="emogi-container">
	    <div class="emoji-box">
			<p><%= @quiz.emoji %></p>
		</div>
		<div class="emoji-box">
		    <p><%= @quiz.emoji2 %></p>
		</div>
		<div class="emoji-box">
			<p><%= @quiz.emoji3 %></p>
		</div>
	</div>

	<div class="question-box">
		<p>Q:<%= @quiz.question %></p>
	</div>

    <div class="answer-box">
    	<%= form_tag result_quiz_path, method: :get do %>
    		<% @options.each do |option| %>
    			<%= submit_tag option, name:"choice", class: "answer-button" %>
    	    <% end %>
    	<% end %>

	</div>

</div><!---playbox--->