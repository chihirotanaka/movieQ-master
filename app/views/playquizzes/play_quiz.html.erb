<div id="quiz-container">

	<div class="title-box">
		<p><strong>第<%= session[:quiz_num]+1 %>問</strong></p>
	</div>

	<div class="emogi-container">
	    <div class="emoji-box">
			<p><%= @quiz.emoji %></p>
		</div>
		<div class="emoji-box">
		    <p><%= @quiz.emoji2 %></p>
		</div>
		<div class="emoji-box">
			<p><%= @quiz.emoji3 %></p>
		</div>
	</div>

	<div class="question-box">
		<p><strong>Q:<%= @quiz.question %></strong></p>
	</div>

    <div class="answer-box">
    	<%= form_tag result_quiz_path, method: :get do %>
    	<%= submit_tag @quiz.answer, name:"choice", class: "answer-button" %>
    	<%= submit_tag @quiz.answer2, name:"choice", class: "answer-button" %>
    	<%= submit_tag @quiz.answer3, name:"choice", class: "answer-button" %>
    	<% end %>
	</div>

</div><!---quiz-container--->