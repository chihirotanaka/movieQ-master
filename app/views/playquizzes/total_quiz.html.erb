  <h1 class="total-title">クイズ結果</h1>

	<div class="total-result">
		<h2><%= session[:result].count(true) %>問正解です！</h2>
		<!-- 判定 -->
		<% if session[:result].count(true) == 0 %>
		    <p class="title">あなたの物語はこれから</p>
		<% elsif session[:result].count(true) == 1 %>
		　  <p class="title">⭐️冒険のはじまり</p>
	    <% elsif session[:result].count(true) == 2 %>
	        <p class="title">⭐️⭐️movie修行中</p>
