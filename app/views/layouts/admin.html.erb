  		        <% end %>
          </ul><!--main-nav-->
        </nav>
  </header><!--all header wrapper-->

  <body>
    <div id="wrapper">
      <div class="home-content wrapper">
        <p id="notice"><%= notice %></p>
      		<main>
      			<%= yield %>
      		</main>
      </div><!--home-content wrapper -->

<!-- footer---------------->
      <footer>
        <p class="text">2020 Presented by movieQ.</p>
      </footer>
    </div>
  </body>
</html>
