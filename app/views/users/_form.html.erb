<%= form_for(user) do |f| %>

  <div class="form-group">
	  <%= f.label "名前", class: "control-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
  	<%= f.label "メールアドレス", class: "control-label" %>
    <%= f.text_field :email, class: "form-control" %>
  </div><br />

  <div class="row col-xs-6 pull-right">
  	<%= f.submit "変更する", class: "btn btn-info btn-lg btn-block",placeholder: ".col-xs-6" %>
  </div>

  <div class="row col-xs-6 pull-left">
  	<%= link_to "退会する",user_registration_path, method: :delete, class: "btn btn-danger btn-lg btn-block", placeholder: ".col-xs-6",
      "data-confirm" => "※退会すると情報が全て消去されます。本当に退会してよろしいですか？" %>
  </div>

<% end %>